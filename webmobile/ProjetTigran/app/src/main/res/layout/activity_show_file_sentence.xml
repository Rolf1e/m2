<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".component.activities.ShowFileSentenceActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
        >
            <Button
                    android:text="@string/show_palindromes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/palindromes_show_button"
                    android:layout_weight="1"
                    android:onClick="showPalindromes"
            />
            <Button
                    android:text="@string/show_sentences"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sentences_show_button"
                    android:layout_weight="1"
                    android:onClick="showSentences"
            />
        </LinearLayout>
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/sentences_list_view"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>